</head>
<body>

  <?php
  
    //引数として$heightと$widthを受け取りその面積をreturn
  function getRectangleArea($height,$width){
    return $height*$width;
  }


    //$rectangle_areaに高さが5、幅が10の長方形の面積getRectangleArea関数を用いて代入
  $rectangle_area = getRectangleArea(5,10);

    //引数として$areaを受け取り、"面積は".$area."です。"とechoします
function printArea($area){
  echo "面積は".$area."です。";
}

    //printArea関数を用いてechoしてください。
  printArea($rectangle_area);  
  ?>

</body>
</html>
